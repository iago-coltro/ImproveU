<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" type="text/css" href="/public/css/stylesheet.css" media="screen" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <title>Login</title>
</head>

<body>
    <section id="login-container">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="side-banner col-md-6 col-lg-5 d-none d-md-block">
                                <img src="img/allurequadros_studio_photoshoot_woman_running_on_fitness_outfit_8c8d2d38-bf2f-4ebf-82b9-2811b08cc36c.png"
                                    alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">
                                    <form action="/login" method="POST">
                                        <div class="d-flex justify-content-center align-items-center mb-3 pb-1">
                                            <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                            <img src="img/Logo01.png" alt="logo" class="img-fluid" width="100"
                                                height="100">
                                        </div>

                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Faça login em sua
                                            conta</h5>

                                        <div class="form-outline mb-4">
                                            <input type="email" id="email" name="email"
                                                class="form-control form-control-lg" required />
                                            <label class="form-label" for="email">Endereço de email</label>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <input type="password" id="senha" name="senha"
                                                class="form-control form-control-lg" required />
                                            <label class="form-label" for="senha">Senha</label>
                                        </div>

                                        <div class="form-outline mb-4" id="raInput" style="display: none;">
                                            <input type="text" id="ra" name="ra" class="form-control form-control-lg" />
                                            <label class="form-label" for="ra">RA (somente para professores)</label>
                                        </div>

                                        <div class="form-check mb-4">
                                            <input class="form-check-input" type="checkbox" value="professor"
                                                id="professorCheckbox" name="userType">
                                            <label class="form-check-label" for="professorCheckbox">
                                                Sou professor
                                            </label>
                                        </div>

                                        <div class="pt-1 mb-4">
                                            <button class="btn btn-dark btn-lg btn-block" type="submit">Login</button>
                                        </div>

                                        <a class="small text-muted" href="/redefinirsenha">Esqueceu sua senha?</a>
                                        <p class="mb-5 pb-lg-2" style="color: #393f81;">Não tem uma conta? <a
                                                href="/cadastro" style="color: #393f81;">Registre-se aqui</a></p>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script>
        const professorCheckbox = document.getElementById('professorCheckbox');
        const raInput = document.getElementById('raInput');

        professorCheckbox.addEventListener('change', () => {
            raInput.style.display = professorCheckbox.checked ? 'block' : 'none';
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</body>

</html>