<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/public/css/stylesheet.css" media="screen" />
    <title>Cadastro</title>
</head>

<body>
    <section id="login-container">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-12 col-lg-12 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">
                                    <form action="/cadastrar" method="POST" enctype="multipart/form-data">
                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Crie sua conta</h5>

                                        <div class="form-outline mb-4">
                                            <input type="text" id="nome" name="nome"
                                                class="form-control form-control-lg" required />
                                            <label class="form-label" for="nome">Nome</label>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <input type="email" id="email" name="email"
                                                class="form-control form-control-lg" required />
                                            <label class="form-label" for="email">E-mail</label>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <input type="password" id="senha" name="senha"
                                                class="form-control form-control-lg" required />
                                            <label class="form-label" for="senha">Senha</label>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <label for="userType">Tipo de usuário:</label>
                                            <select name="userType" id="userType">
                                                <option value="aluno">Aluno</option>
                                                <option value="professor">Professor</option>
                                            </select>
                                        </div>

                                        <div class="form-outline mb-4" id="raInput" style="display: none;">
                                            <input type="text" id="ra" name="ra" class="form-control form-control-lg" />
                                            <label class="form-label" for="ra">RA (somente para professores)</label>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <input type="file" id="foto_perfil" name="foto_perfil"
                                                class="form-control form-control-lg" />
                                            <label class="form-label" for="foto_perfil">Foto de Perfil
                                                (opcional)</label>
                                        </div>

                                        <div class="pt-1 mb-4">
                                            <button class="btn btn-dark btn-lg btn-block"
                                                type="submit">Cadastrar</button>
                                        </div>

                                        <p class="mb-5 pb-lg-2" style="color: #393f81;">Já tem uma conta? <a href="/"
                                                style="color: #393f81;">Faça login aqui</a></p>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script>
        const userTypeSelect = document.getElementById('userType');
        const raInput = document.getElementById('raInput');

        userTypeSelect.addEventListener('change', () => {
            if (userTypeSelect.value === 'professor') {
                raInput.style.display = 'block';
            } else {
                raInput.style.display = 'none';
            }
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</body>

</html>