        integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <!-- Seu CSS personalizado -->
    <link rel="stylesheet" type="text/css" href="/public/css/stylesheet.css" media="screen" />
    <title>Editar Perfil</title>
    <!-- Favicon - O caminho deve ser relativo ou absoluto para a web -->
    <link rel="icon" href="img/Logo.jpeg">
</head>

<body>
    <!-- JavaScript (Opcional) -->
    <!-- jQuery primeiro, depois Popper.js, depois Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
        integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
        integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
        crossorigin="anonymous"></script>

    <section id="login-container">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-12 col-lg-12 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">
                                    <form action="/editar" method="POST" enctype="multipart/form-data">
                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Editar Perfil</h5>

                                        <div class="form-outline mb-4">
                                            <img id="fotoPerfilPreview" src="" alt="Foto de Perfil"
                                                class="img-fluid rounded-circle mb-2"
                                                style="max-width: 100px; max-height: 100px; object-fit: cover;">
                                            <input type="file" id="foto_perfil" name="foto_perfil"
                                                class="form-control form-control-lg" />
                                            <label class="form-label" for="foto_perfil">Foto de Perfil</label>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <input type="text" id="nome" name="nome"
                                                class="form-control form-control-lg" value="<%- usuario.nome %>"
                                                required />
                                            <label class="form-label" for="nome">Nome</label>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <input type="email" id="email" name="email"
                                                class="form-control form-control-lg" value="<%- usuario.email %>"
                                                required />
                                            <label class="form-label" for="email">E-mail</label>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <input type="password" id="senha" name="senha"
                                                class="form-control form-control-lg" />
                                            <label class="form-label" for="senha">Nova Senha (opcional)</label>
                                        </div>

                                        <div class="pt-1 mb-4">
                                            <button class="btn btn-dark btn-lg btn-block" type="submit">Salvar
                                                Alterações</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script>
        const userTypeSelect = document.getElementById('userType');
        const raInput = document.getElementById('raInput');

        // Função para adicionar os campos do formulário dinamicamente
        function createFormFields() {
            const form = document.getElementById('cadastroForm');

            const title = document.createElement('h5');
            title.className = "fw-normal mb-3 pb-3";
            title.style.letterSpacing = "1px";
            title.textContent = "Editar Perfil";
            form.appendChild(title);

            const fotoPerfilPreview = document.createElement('img');
            fotoPerfilPreview.id = "fotoPerfilPreview";
            fotoPerfilPreview.src = "<%- usuario.foto_perfil || '/public/img/user.png' %>";
            fotoPerfilPreview.alt = "Foto de Perfil";
            fotoPerfilPreview.className = "img-fluid rounded-circle mb-2";
            fotoPerfilPreview.style.maxWidth = "100px";
            fotoPerfilPreview.style.maxHeight = "100px";
            fotoPerfilPreview.style.objectFit = "cover";
            form.appendChild(fotoPerfilPreview);

            const fotoPerfilInput = document.createElement('input');
            fotoPerfilInput.type = "file";
            fotoPerfilInput.id = "foto_perfil";
            fotoPerfilInput.name = "foto_perfil";
            fotoPerfilInput.className = "form-control form-control-lg";
            form.appendChild(fotoPerfilInput);

            const fotoPerfilLabel = document.createElement('label');
            fotoPerfilLabel.className = "form-label";
            fotoPerfilLabel.htmlFor = "foto_perfil";
            fotoPerfilLabel.textContent = "Foto de Perfil";
            form.appendChild(fotoPerfilLabel);

            const nomeInput = document.createElement('input');
            nomeInput.type = "text";
            nomeInput.id = "nome";
            nomeInput.name = "nome";
            nomeInput.className = "form-control form-control-lg";
            nomeInput.value = "<%- usuario.nome %>";
            nomeInput.required = true;
            form.appendChild(nomeInput);

            const nomeLabel = document.createElement('label');
            nomeLabel.className = "form-label";
            nomeLabel.htmlFor = "nome";
            nomeLabel.textContent = "Nome";
            form.appendChild(nomeLabel);

            const emailInput = document.createElement('input');
            emailInput.type = "email";
            emailInput.id = "email";
            emailInput.name = "email";
            emailInput.className = "form-control form-control-lg";
            emailInput.value = "<%- usuario.email %>";
            emailInput.required = true;
            form.appendChild(emailInput);

            const emailLabel = document.createElement('label');
            emailLabel.className = "form-label";
            emailLabel.htmlFor = "email";
            emailLabel.textContent = "E-mail";
            form.appendChild(emailLabel);

            const senhaInput = document.createElement('input');
            senhaInput.type = "password";
            senhaInput.id = "senha";
            senhaInput.name = "senha";
            senhaInput.className = "form-control form-control-lg";
            form.appendChild(senhaInput);

            const senhaLabel = document.createElement('label');
            senhaLabel.className = "form-label";
            senhaLabel.htmlFor = "senha";
            senhaLabel.textContent = "Nova Senha (opcional)";
            form.appendChild(senhaLabel);

            const submitButton = document.createElement('button');
            submitButton.className = "btn btn-dark btn-lg btn-block";
            submitButton.type = "submit";
            submitButton.textContent = "Salvar Alterações";
            form.appendChild(submitButton);
        }

        // Chama a função para criar os campos do formulário quando a página carregar
        createFormFields();

        // Pré-visualização da foto de perfil
        const fotoPerfilInput = document.getElementById('foto_perfil');
        const fotoPerfilPreview = document.getElementById('fotoPerfilPreview');

        fotoPerfilInput.addEventListener('change', () => {
            const file = fotoPerfilInput.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = (e) => {
                    fotoPerfilPreview.src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        });
    </script>

